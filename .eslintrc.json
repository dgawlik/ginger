{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2016,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "keyword-spacing": [
          "error",
          {
            "before": true,
            "after": true
          }
        ],
        "complexity": [
          "error",
          10
        ],
        "eqeqeq": [
          "error",
          "always"
        ],
        "no-extra-bind": "error",
        "no-loop-func": "error",
        "callback-return": "error",
        "handle-callback-err": "error",
        "newline-per-chained-call": ["error", { "ignoreChainWithDepth": 2 }],
        "no-tabs": "error",
        "no-trailing-spaces": "error",
        "space-before-blocks": "error",
        "space-before-function-paren": ["error", "always"],
        "no-var": "error",
        "object-shorthand": "error"
    }
}
